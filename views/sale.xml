<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  	<record model="ir.ui.view" id="x_view_order_form">
        <field name="name">x_view_order_form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="attributes">
              <attribute name="attrs">{'readonly':[('state', 'in', ('cancel','done'))], 'invisible': [('analytic_tags_per_lines','=',True)], 'required': [('analytic_tags_per_lines','=',False)]}</attribute>
            </field>
            <field name="analytic_account_id" position="after">
                <!-- se agrega -->
                <field name="analytic_tags_per_lines" invisible="1"/>
                <field name="analytic_account_tag_ids" attrs="{'readonly':[('state', 'in', ('cancel','done'))], 'invisible': [('analytic_tags_per_lines','=',True)]}" widget="many2many_tags"/>
            </field>

            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='product_uom']" position="after">
                <field name="analytic_tags_per_lines" invisible="1"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='analytic_tags_per_lines']" position="after">
                <field name="analytic_account_id" attrs="{'required': [('analytic_tags_per_lines','=',True)], 'readonly': [('analytic_tags_per_lines','=',False)]}"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='analytic_tag_ids']" position="attributes">
                <!-- <attribute name="attrs">{'required': [('analytic_tags_per_lines','=',True)], 'readonly': [('analytic_tags_per_lines','=',False)]}</attribute> -->
                <attribute name="attrs">{'readonly': [('analytic_tags_per_lines','=',False)]}</attribute>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
